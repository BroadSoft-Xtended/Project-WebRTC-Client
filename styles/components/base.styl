fadeIn =
  transition all 1s linear
  opacity 1
  z-index 20
fadeInPopup =
  transition all 1s linear
  opacity 1
  z-index 100
fadeOut = 
  transition all 1s linear
  opacity 0
  z-index -1  
unsupported = 
  position relative
  top 0px
  left 0px
  margin 10px
  background red

body
  background-color #FFFFFF
  margin 0
  font-family 'Open Sans', Arial, sans-serif
  -webkit-font-smoothing antialiased !important

.main
  position relative
  top 0px
  left 0px
  width 100%
  &:-webkit-full-screen-ancestor
    &:not(iframe)
      position absolute !important
      top 0px
      left 0px
      right 0px
      bottom 0px
      width 100%
      height 100%

.client
  position relative
  top 0
  left 0
  &.r1280x720
    width 1280px
  &.r960x720
    width 960px
  .table
    display table
    width 100%
  .fixed
    table-layout fixed
  .collapse
    border-collapse collapse
  .cell
    display table-cell
  .heading
    display table-row
    font-weight bold
  .row
    display table-row
    margin 0
  .group
    display table-row-group
  .fadeable
    opacity 0
    display block
    z-index -1
    backface-visibility hidden
  &::-webkit-scrollbar
    width 8px
  &::-webkit-scrollbar-track
  &::-webkit-scrollbar-thumb
    background rgba(39, 39, 39, 1)
    &:window-inactive
      background rgba(39, 39, 39, 1)
  &.view-centered
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    backface-visibility hidden

.client.r640x360, .client.r640x480
  width 640px

.client.r320x180, .client.r320x240
  width 320px

.full-screen-expanded
  &.client
    width 100% !important
    height 100% !important
  .main
    height 100%



.button
  &:active
    color #04AFF0
    background -webkit-gradient(linear, left top, right bottom, from(#7CDD07), to(#FAA51A))
    background linear-gradient(to bottom left, #7CDD07, #FAA51A)
  &:hover
    box-shadow 0px 0px 10px #999

.popup
  display none
  background #333333
  padding 10px
  border 2px solid #DDDDDD
  float left
  position absolute
  top 0
  bottom 0
  left 0
  right 0
  margin auto
  box-shadow 0px 0px 10px #999999
  border-radius 3px
  font-size 14px
  line-height 18px
  z-index 100
  .actions
    text-align right
  .title
    font-weight bold
    font-size 16px
    color white

.ui-widget-content
  &.ui-dialog
    display none
    color #999999
    font-size 22px
    background #333333
    padding 10px
    border 2px solid #DDDDDD
    box-shadow 0px 0px 10px #999999
    border-radius 3px
    z-index 99

.no-close
  .ui-dialog-titlebar-close
    display none


.unsupported
  position absolute
  top 240px
  left 30px
  width 600px
  background-color #191414
  text-align center
  display none
  color white
  z-index 10

#screen_sharing_unsupported
  {unsupported}
  
#screen_sharing_unsupported
  display none
  span
    text-decoration underline

.client .row:before, .client .row:after
  display none

.historyRowSample
  display none

.client.view-audioOnly
  display inline-block
  width auto

.default-color
  color #2BA6CB


[id$="sample"]
  display none !important

#javascript_disabled
  display block
  background-color white
  color black

a
  &.disabled
    pointer-events none
    cursor default
    background-color #999
    opacity 0.5

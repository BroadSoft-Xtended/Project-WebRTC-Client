.sms
  display none
  position absolute
  top 10px
  right 10px
  .view
    padding 10px
    border-radius 4px
    border 2px solid #DDDDDD
    box-shadow 0px 0px 10px #999999
  .loginForm
    width 250px
  .sendForm
    width 600px
    display none
  .sendBody
    width 339px
  .inbox
    width 600px
    display none
    .inner
      max-height 250px
      overflow auto
    .cell
      padding 5px
    .from
      width 100px
    .status
      width 50px
    .time
      width 135px
    .body
      word-wrap break-word
      & > div
        display none
    .inboxItem
      &.image
        .body
          .image
            span
              margin-right 5px
    .actions
      width 15px
    .icon-trash
      font-size 15px
  .status
    display none
    text-align right
    .statusContent
      text-align right
      border 1px solid #c3c3c3
      background-color #e3e2e2
      font-size 70%
      padding 1px 3px
      border-top 0px
      margin-right 15px
      border-bottom-right-radius 4px
      border-bottom-left-radius 4px
    &.error
      color red

.sms .inbox .inboxItem.text .body .text, .sms .inbox .inboxItem.image .body .image,
.sms .inbox .inboxItem.video .body .video, .sms .inbox .inboxItem.audio .body .audio
  display block

.sms .inbox .inboxItem.audio .body .audio audio,
.sms .inbox .inboxItem.video .body .video video
  width 100%

.inbox
  .inboxContent
    display table-row-group
    
.enable-sms.sms-shown .sms
  {fadeInPopup}

.enable-sms:not(.sms-shown) .sms
  {fadeOut}

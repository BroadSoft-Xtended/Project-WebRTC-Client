.bdsft-client
  .main
    position relative
    top 0px
    left 0px
    width 100%

  .client
    position relative
    top 0
    left 0
    &._1280x720
      width 1280px
    &._960x720
      width 960px
    &::-webkit-scrollbar
      width 8px
    &::-webkit-scrollbar-track
    &::-webkit-scrollbar-thumb
      background rgba(39, 39, 39, 1)
      &:window-inactive
        background rgba(39, 39, 39, 1)
    &.  centered
      position absolute
      top 50%
      left 50%
      transform translate(-50%, -50%)
      backface-visibility hidden

  .client._640x360, .client._640x480
    width 640px

  .client._320x180, .client._320x240
    width 320px

  .client .row:before, .client .row:after
    display none

  .client.audioOnly
    display inline-block
    width auto

  .main
    &:-webkit-full-screen-ancestor
      &:not(iframe)
        position absolute !important
        top 0px
        left 0px
        right 0px
        bottom 0px
        width 100%
        height 100%

  .fullscreen-shown
    &.client
      width 100% !important
      height 100% !important
    .main
      height 100%
      
  #screen_sharing_unsupported
    {unsupported}
    display none
    span
      text-decoration underline
.bdsft-client
  .main
    position relative
    top 0px
    left 0px
    width 100%

  .client
    position relative
    top 0
    left 0
    &::-webkit-scrollbar
      width 8px
    &::-webkit-scrollbar-track
    &::-webkit-scrollbar-thumb
      background rgba(39, 39, 39, 1)
      &:window-inactive
        background rgba(39, 39, 39, 1)

    &._960x720
      width 960px

    &._640x360, &._640x480
      width 640px

    &._320x180, &._320x240
      width 320px

    &._1280x720, &.hd
      width 1280px

    .row:before, .row:after
      display none

    &.audioOnly
      display inline-block
      width auto

    &.fullscreen-shown
      width 100% !important
      height 100% !important
      
  .main
    &:-webkit-full-screen-ancestor
      &:not(iframe)
        position absolute !important
        top 0px
        left 0px
        right 0px
        bottom 0px
        width 100%
        height 100%
        
    &.fullscreen-shown
      height 100%

  #screen_sharing_unsupported
    {unsupported}
    display none
    span
      text-decoration underline
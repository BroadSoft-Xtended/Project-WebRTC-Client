.main
  position relative
  top 0px
  left 0px
  width 100%
  &:-webkit-full-screen-ancestor
    &:not(iframe)
      position absolute !important
      top 0px
      left 0px
      right 0px
      bottom 0px
      width 100%
      height 100%

.client
  position relative
  top 0
  left 0
  &.r1280x720
    width 1280px
  &.r960x720
    width 960px
  .table
    display table
    width 100%
  .fixed
    table-layout fixed
  .collapse
    border-collapse collapse
  .cell
    display table-cell
  .heading
    display table-row
    font-weight bold
  .row
    display table-row
    margin 0
  .group
    display table-row-group
  .fadeable
    opacity 0
    display block
    z-index -1
    backface-visibility hidden
  &::-webkit-scrollbar
    width 8px
  &::-webkit-scrollbar-track
  &::-webkit-scrollbar-thumb
    background rgba(39, 39, 39, 1)
    &:window-inactive
      background rgba(39, 39, 39, 1)
  &.view-centered
    position absolute
    top 50%
    left 50%
    transform translate(-50%, -50%)
    backface-visibility hidden

.client.r640x360, .client.r640x480
  width 640px

.client.r320x180, .client.r320x240
  width 320px

.full-screen-expanded
  &.client
    width 100% !important
    height 100% !important
  .main
    height 100%

.client .row:before, .client .row:after
  display none

.client.view-audioOnly
  display inline-block
  width auto